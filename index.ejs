<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Node.js - MySQL</title>
    <link rel="stylesheet" href="/css/style.css"> 
    <script>
        
        function showAlert() {
            const params = new URLSearchParams(window.location.search);
            if (params.has('status')) {
                const status = params.get('status');
                let message = '';
                if (status === 'add_success') {
                    message = 'Data pengguna berhasil ditambahkan!';
                } else if (status === 'update_success') {
                    message = 'Data pengguna berhasil diperbarui!';
                } else if (status === 'delete_success') {
                    message = 'Data pengguna berhasil dihapus!';
                }
                if (message) {
                    alert(message);
                }
            }
        }

        window.onload = showAlert;
    </script>
</head>
<body>
    <h1>Daftar Pengguna</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Telepon</th>
            <th>Aksi</th>
        </tr>
        <% users.forEach(pengguna => { %>
        <tr>
            <td><%= pengguna.id %></td>
            <td><%= pengguna.nama %></td>
            <td><%= pengguna.email %></td>
            <td><%= pengguna.phone %></td>
            <td>
                <a href="/edit/<%= pengguna.id %>">Edit</a> |
                <a href="/delete/<%= pengguna.id %>" onclick="return confirm('Yakin ingin menghapus pengguna ini?')">Hapus</a>
            </td>
        </tr>
        <% }) %>
    </table>

    <h2>Tambah Pengguna Baru</h2>
    <form action="/add" method="post">
        <label for="nama">Nama:</label>
        <input type="text" id="nama" name="nama" required><br>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" required><br>
        <label for="phone">Telepon:</label>
        <input type="text" name="phone" id="phone" required><br>
        <button type="submit">Tambah</button>
    </form>
</body>
</html>
